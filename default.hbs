    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized" content="320">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {{ghost_head}} 
  </head>

  <body class="{{body_class}}">

    <div class="wrapper_fela">
      {{{body}}}
    </div>
